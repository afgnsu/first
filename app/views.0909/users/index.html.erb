<h1>用戶清單</h1>

<table class="table">
  <thead>
    <tr>
      <th>姓名</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to '詳細', user %></td>
        <td><%= link_to '編輯', edit_user_path(user) %></td>
        <td><%= link_to '刪除', user, method: :delete, data: { confirm: '確定要刪除？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

